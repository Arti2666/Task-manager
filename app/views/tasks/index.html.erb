<h1>My Tasks</h1>

<% @tasks.each do |task| %>
<div>
<% if task.completed? %>
<input type="checkbox" checked>
<% else %>
<input type="checkbox">
<%end %>
<%= link_to task.title, task_path(task) %> -
<%= link_to "Delete", task_path(task), method: :delete,
data: { confirm: "Are you certain?"}%></li>
<%end  %>
</div>

<%= link_to "+ Add a new task", new_path %>
